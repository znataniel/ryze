alias ls='ls --color=auto -h'
alias ll='ls --color=auto -alh'
alias grep='grep --color=auto'
alias e=$EDITOR
alias v=$EDITOR
alias z='devour zathura'
alias sxiv='devour nsxiv'
alias pandoca4="pandoc -s -V papersize:a4"
alias xpaste="xclip -o -sel clip"
alias mirror_refresh="sudo reflector --latest 5 --sort rate --save /etc/pacman.d/mirrorlist"


alias gb="git branch"
alias gl="git log --oneline"
alias glt="git log --oneline --graph --all"
alias gs="git switch -c"

alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'
