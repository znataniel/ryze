#!/bin/bash
#
# A dmenu wrapper script for system functions.
#
# slock for X and swaylock for Wayland support


WM="Qtile"

[[ -z $WAYLAND_DISPLAY  ]] && locker="slock" || locker="swaylock"

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac


case "$(printf "ğŸ’¤ sleep\nğŸ”ƒ reboot\nğŸ–¥ï¸shutdown\nğŸ”’ lock\nğŸšª leave $WM\nâ™»ï¸ renew $WM\nğŸ» hibernate" | rofi -dmenu -i -p 'Action: ')" in
	'ğŸ’¤ sleep') $ctl suspend -i && $locker;;
	'ğŸ”ƒ reboot') $ctl reboot -i ;;
	'ğŸ–¥ï¸shutdown') $ctl poweroff -i ;;
	'ğŸ”’ lock') $locker ;;
	"ğŸšª leave $WM") qtile cmd-obj -o cmd -f shutdown ;;
	"â™»ï¸ renew $WM") qtile cmd-obj -o cmd -f reload_config ;;
	'ğŸ» hibernate') $ctl hibernate -i ;;
	*) exit 1 ;;
esac
